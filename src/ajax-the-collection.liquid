{
	"handle": "{{ collection.handle }}",
	"title": "{{ collection.title }}",
	"page": "{{ paginate.current_page }}",
	"products": {
		{% for product in collection.products %}
			"{{ product.handle }}": {
				"info": {{ product | json | replace: "'", '&#39;' }},
				"metafields": {{ product.metafields.c_f | json }}
			}
		{% if forloop.last %}{% else %},{% endif %}

		{% endfor %}
	}

}